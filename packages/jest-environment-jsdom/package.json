{
  "name": "@bufbuild/jest-environment-jsdom",
  "version": "0.1.1",
  "license": "Apache-2.0",
  "description": "A modern jsdom test environment for Jest",
  "repository": {
    "type": "git",
    "url": "https://github.com/bufbuild/jest-environment-jsdom.git",
    "directory": "packages/jest-environment-jsdom"
  },
  "scripts": {
    "clean": "rm -rf ./dist/*",
    "build": "npm run build:cjs",
    "build:cjs": "tsc --project tsconfig.json --module commonjs --outDir ./dist/cjs --declaration --declarationDir ./dist/cjs",
    "format": "prettier --write --ignore-unknown '.' '!dist'",
    "lint": "eslint --max-warnings 0 .",
    "license-header": "license-header"
  },
  "main": "./dist/cjs/index.js",
  "exports": {
    "require": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist/**"
  ],
  "peerDependencies": {
    "jest-environment-jsdom": "^29.5.0"
  }
}
